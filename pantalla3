<body>
  <img src="logo_proveedora.png" class="marca-agua" alt="Marca de agua">
  <div class="contenedor">
    <h2>Carrito de productos agregados</h2>
    <div id="listaCarrito"></div>
    <button id="continuarBtn" onclick="irAlResumen()">Continuar a resumen</button>
  </div>

  <script>
    let productos = JSON.parse(localStorage.getItem("productosSeleccionados") || "[]");
    const contenedor = document.getElementById("listaCarrito");

    function mostrarCarrito() {
      contenedor.innerHTML = "";
      productos.forEach((prod, index) => {
        const div = document.createElement("div");
        div.className = "producto";
        div.innerHTML = `
          <strong>${prod.descripcion}</strong><br>
          Código: ${prod.codigo}<br>
          Cantidad: <input type="number" value="${prod.cantidad}" onchange="actualizarCantidad(${index}, this.value)" />
          <button onclick="eliminar(${index})">Eliminar</button>
        `;
        contenedor.appendChild(div);
      });
    }

    function actualizarCantidad(index, nuevaCantidad) {
      const cantidad = parseFloat(nuevaCantidad);
      if (!cantidad || cantidad <= 0) {
        alert("Cantidad inválida");
        mostrarCarrito();
        return;
      }
      productos[index].cantidad = cantidad;
      localStorage.setItem("productosSeleccionados", JSON.stringify(productos));
    }

    function eliminar(index) {
      productos.splice(index, 1);
      localStorage.setItem("productosSeleccionados", JSON.stringify(productos));
      mostrarCarrito();
    }

    function irAlResumen() {
      window.location.href = "pantalla2.html";
    }

    mostrarCarrito();
  </script>
</body>
</html>
